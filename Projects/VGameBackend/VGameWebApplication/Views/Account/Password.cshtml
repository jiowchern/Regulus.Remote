@model Guid

@{
    ViewBag.Title = "Password";
}

<script language="javascript">
    function validateForm(p1,p2)
    {
        if (p1 != p2)
        {
            alert("密碼有誤");
            return false;
        }
        return true;
    }
</script>
<h2>Password</h2>

<div>

    @{
        using (Html.BeginForm("ModifyPassword" , "Account" , FormMethod.Post , new { enctype = "multipart/form-data", onsubmit = "return validateForm(this.password1.value,this.password2.value)"}))
        {
            <div class="form-group">
                @Html.Label("新密碼")
                @Html.TextBox("password1")
            </div>

            <div class="form-group">
                @Html.Label("確認密碼")
                @Html.TextBox("password2")
            </div>

            <input type="submit" value="確認" class="btn btn-default" />
        }
    }
</div>

